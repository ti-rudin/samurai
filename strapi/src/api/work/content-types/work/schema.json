{
  "kind": "collectionType",
  "collectionName": "works",
  "info": {
    "singularName": "work",
    "pluralName": "works",
    "displayName": "Work"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "cost": {
      "type": "decimal"
    },
    "status_of_work": {
      "type": "enumeration",
      "enum": [
        "pending",
        "in_progress",
        "completed"
      ]
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "works"
    },
    "executor": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "works"
    },
    "executorPercentage": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "isRecomended": {
      "type": "boolean",
      "default": false
    },
    "executorPays": {
      "type": "json"
    }
  }
}
